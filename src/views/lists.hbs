<h1>{{board.title}}</h1>

<form method="POST" action="/boards/{{board.id}}/lists">
  <input type="text" name="title" placeholder="Nombre de la Lista" required>
  <button type="submit">Crear Lista</button>
</form>

<ul>
  {{#each board.lists}}
    <li>
      <strong>{{this.title}}</strong>
      <form method="POST" action="/boards/{{../board.id}}/lists/{{this.id}}/delete" style="display: inline;">
        <button type="submit">Eliminar</button>
      </form>
    </li>
  {{/each}}
</ul>

<a href="/boards">Volver a Tableros</a>
