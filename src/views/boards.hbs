<h1>Tus Tableros</h1>

<form method="POST" action="/boards">
  <input type="text" name="title" placeholder="Nombre del Tablero" required>
  <button type="submit">Crear Tablero</button>
</form>

<ul>
  {{#each boards}}
    <li>
      <a href="/boards/{{this.id}}">{{this.title}}</a>
      <form method="POST" action="/boards/{{this.id}}/delete" style="display: inline;">
        <button type="submit">Eliminar</button>
      </form>
    </li>
  {{/each}}
</ul>
